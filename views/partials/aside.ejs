<!-- Script untuk menampilkan dropdown -->
<script>
  const menuButton = document.getElementById("menu-button");
  const dropdownMenu = document.getElementById("dropdown-menu");
  const arrowIcon = document.getElementById("arrow-icon");

  menuButton.addEventListener("click", () => {
    const isExpanded = menuButton.getAttribute("aria-expanded") === "true";

    dropdownMenu.classList.toggle("hidden");

    menuButton.setAttribute("aria-expanded", !isExpanded);

    if (!isExpanded) {
      arrowIcon.classList.add("rotate-180");
    } else {
      arrowIcon.classList.remove("rotate-180");
    }
  });

  document.addEventListener("click", (event) => {
    if (
      !menuButton.contains(event.target) &&
      !dropdownMenu.contains(event.target)
    ) {
      dropdownMenu.classList.add("hidden");
      menuButton.setAttribute("aria-expanded", "false");
      arrowIcon.classList.remove("rotate-180");
    }
  });

  // Data Asisten dropdown
  const menuButtonAsisten = document.getElementById("menu-button-asisten");
  const dropdownMenuAsisten = document.getElementById("dropdown-menu-asisten");
  const arrowIconAsisten = document.getElementById("arrow-icon-asisten");

  menuButtonAsisten.addEventListener("click", () => {
    const isExpanded = menuButtonAsisten.getAttribute("aria-expanded") === "true";

    dropdownMenuAsisten.classList.toggle("hidden");

    menuButtonAsisten.setAttribute("aria-expanded", !isExpanded);

    if (!isExpanded) {
      arrowIconAsisten.classList.add("rotate-180");
    } else {
      arrowIconAsisten.classList.remove("rotate-180");
    }
  });

  document.addEventListener("click", (event) => {
    if (
      !menuButtonAsisten.contains(event.target) &&
      !dropdownMenuAsisten.contains(event.target)
    ) {
      dropdownMenuAsisten.classList.add("hidden");
      menuButtonAsisten.setAttribute("aria-expanded", "false");
      arrowIconAsisten.classList.remove("rotate-180");
    }
  });
</script>
