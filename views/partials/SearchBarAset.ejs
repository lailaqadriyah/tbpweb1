<div class="relative flex items-center w-full max-w-md">
    <form id="search-filter-form" action="/aset" method="GET" class="flex items-center w-full">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5 text-gray-400 absolute left-3"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
            />
        </svg>
        <input
            type="text"
            id="search"
            name="search"
            class="block w-full px-4 py-2 pl-10 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500"
            placeholder="Cari"
            autocomplete="off"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
        />
    </form>
</div>


<script>
    document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('search');
        const searchFilterForm = document.getElementById('search-filter-form');

        // Submit saat tekan Enter
        searchInput.addEventListener('keypress', (event) => {
            if (event.key === 'Enter') {
                event.preventDefault();
                searchFilterForm.submit();
            }
        });
    });
</script>
