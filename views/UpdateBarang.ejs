<%- include('./partials/layoutStart.ejs') %>
<%- include('./partials/aside.ejs') %>

<div class="flex-1 bg-gray-100 p-6">

    <div class="mb-6 bg-white rounded-md shadow-md p-6">
    <div class="flex justify-between items-center mb-6 pb-4">
        <h2 class="text-2xl font-semibold text-gray-800">Ubah Data Barang</h2>
        <a href="/aset" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-times text-xl"></i>
        </a>
    </div>

    <form action="/aset/update/<%= aset.id %>" method="POST">
        <div>
            <div class="flex flex-col items-center justify-center mb-4 p-6 border-2 border-dashed border-gray-300 rounded-lg text-center h-48 md:h-full">
                <svg class="w-12 h-12 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <p class="text-gray-500 mb-1">Tarik gambar ke sini</p>
                <p class="text-gray-500 mb-2">atau</p>
                <label for="imageUpload" class="cursor-pointer text-blue-600 hover:underline">Upload gambar</label>
                <input type="file" id="imageUpload" name="gambarBarang" class="hidden">
                <% if (aset.gambarBarang) { %>
                    <img src="/uploads/<%= aset.gambarBarang %>" alt="Gambar Barang" class="mt-4 max-h-32">
                <% } %>
            </div>

            <div class="space-y-4">
                <div>
                    <label for="namaBarang" class="block text-sm font-medium text-gray-700 mb-1">Nama Barang</label>
                    <input type="text" id="namaBarang" name="nama_barang" placeholder="Masukkan nama barang" value="<%= aset.nama_barang %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="kodeBarang" class="block text-sm font-medium text-gray-700 mb-1">Kode Barang</label>
                    <input type="text" id="kodeBarang" name="kode_barang" placeholder="Masukkan kode barang" value="<%= aset.kode_barang %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="kategori" class="block text-sm font-medium text-gray-700 mb-1">Kategori</label>
                    <select id="kategori" name="kategori_barang" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="">Pilih kategori barang</option>
                        <option value="Barang elektronik" <%= aset.kategori_barang === 'Barang elektronik' ? 'selected' : '' %>>Barang elektronik</option>
                        <option value="Perabotan" <%= aset.kategori_barang === 'Perabotan' ? 'selected' : '' %>>Perabotan</option>
                        <option value="Laporan TA" <%= aset.kategori_barang === 'Laporan TA' ? 'selected' : '' %>>Laporan TA</option>
                        <option value="Laporan KP" <%= aset.kategori_barang === 'Laporan KP' ? 'selected' : '' %>>Laporan KP</option>
                        <option value="Buku" <%= aset.kategori_barang === 'Buku' ? 'selected' : '' %>>Buku</option>
                        <option value="ATK" <%= aset.kategori_barang === 'ATK' ? 'selected' : '' %>>ATK</option>
                    </select>
                </div>
                <div>
                    <label for="lokasi" class="block text-sm font-medium text-gray-700 mb-1">Lokasi</label>
                    <input type="text" id="lokasi" name="lokasi" placeholder="Masukkan lokasi" value="<%= aset.lokasi %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="kondisi" class="block text-sm font-medium text-gray-700 mb-1">Kondisi</label>
                    <select id="kondisi" name="kondisi" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="">Pilih kondisi barang</option>
                        <option value="Baik" <%= aset.kondisi === 'Baik' ? 'selected' : '' %>>Baik</option>
                        <option value="Rusak" <%= aset.kondisi === 'Rusak' ? 'selected' : '' %>>Rusak</option>
                        </select>
                </div>
                <div>
                    <label for="jumlah" class="block text-sm font-medium text-gray-700 mb-1">Jumlah</label>
                    <input type="number" id="jumlah" name="kuantitas" placeholder="Masukkan jumlah barang" value="<%= aset.kuantitas %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="tanggal" class="block text-sm font-medium text-gray-700 mb-1">Tanggal</label>
                    <div class="relative">
                        <input type="date" id="tanggal" name="tanggal_masuk" placeholder="Masukkan tanggal" 
                               value="<%= aset.tanggal_masuk ? new Date(aset.tanggal_masuk).toISOString().slice(0,10) : '' %>" 
                               class="mt-1 block w-full pr-10 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    </div>
                </div>
            </div>
        </div>

        <div class="flex justify-end mt-8 pt-4 border-t border-gray-200">
            <button type="reset" class="px-6 py-2 border border-red-500 rounded-md text-red-500 font-medium hover:bg-red-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 mr-3">Reset</button>
            <button type="submit" class="px-6 py-2 bg-[#0D1F4B] text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Simpan</button>
        </div>
    </form>
</div>
    
</div>

<%- include('./partials/closeAside.ejs') %>