<%- include('./partials/layoutStart.ejs') %>
<%- include('./partials/aside.ejs') %>

<div class="flex-1 bg-gray-100 p-6">

    <div class="mb-6 bg-white rounded-md shadow-md p-6">
    <div class="flex justify-between items-center mb-6 pb-4">
        <h2 class="text-2xl font-semibold text-gray-800">Barang</h2>
        <a href="/aset" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-times text-xl"></i>
        </a>
    </div>

    <form action="/data-barang" method="POST">
        <div>
            <div class="flex flex-col items-center justify-center mb-4 p-6 border-2 border-dashed border-gray-300 rounded-lg text-center h-48 md:h-full">
                <svg class="w-12 h-12 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <p class="text-gray-500 mb-1">Tarik gambar ke sini</p>
                <p class="text-gray-500 mb-2">atau</p>
                <label for="imageUpload" class="cursor-pointer text-blue-600 hover:underline">Upload gambar</label>
                <input type="file" id="imageUpload" name="gambarBarang" class="hidden">
            </div>

            <div class="space-y-4">
                <div>
                    <label for="namaBarang" class="block text-sm font-medium text-gray-700 mb-1">Nama Barang</label>
                    <input type="text" id="namaBarang" name="namaBarang" placeholder="Masukkan nama barang" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="kodeBarang" class="block text-sm font-medium text-gray-700 mb-1">Kode Barang</label>
                    <input type="text" id="kodeBarang" name="kodeBarang" placeholder="Masukkan kode barang" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="kategori" class="block text-sm font-medium text-gray-700 mb-1">Kategori</label>
                    <select id="kategori" name="kategori" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="">Pilih kategori barang</option>
                        <option value="elektronik">Elektronik</option>
                        <option value="furniture">Furniture</option>
                        <option value="atk">ATK</option>
                        </select>
                </div>
                <div>
                    <label for="lokasi" class="block text-sm font-medium text-gray-700 mb-1">Lokasi</label>
                    <input type="text" id="lokasi" name="lokasi" placeholder="Masukkan lokasi" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="jumlah" class="block text-sm font-medium text-gray-700 mb-1">Jumlah</label>
                    <input type="number" id="jumlah" name="jumlah" placeholder="Masukkan jumlah barang" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="satuan" class="block text-sm font-medium text-gray-700 mb-1">Satuan</label>
                    <input type="text" id="satuan" name="satuan" placeholder="Masukkan satuan barang" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="tanggal" class="block text-sm font-medium text-gray-700 mb-1">Tanggal</label>
                    <div class="relative">
                        <input type="date" id="tanggal" name="tanggal" placeholder="Masukkan tanggal" class="mt-1 block w-full pr-10 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    </div>
                </div>
            </div>
        </div>

        <div class="flex justify-end mt-8 pt-4 border-t border-gray-200">
            <button type="reset" class="px-6 py-2 border border-red-500 rounded-md text-red-500 font-medium hover:bg-red-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 mr-3">Reset</button>
            <button type="submit" class="px-6 py-2 bg-[#0D1F4B] text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Simpan</button>
        </div>
    </form>
</div>
    
</div>



<%- include('./partials/closeAside.ejs') %>