<%- include('./partials/layoutStart.ejs') %>
<%- include('./partials/aside.ejs') %>

<div class="flex-1 bg-gray-100 p-6">
  <div class="mb-6 bg-white rounded-md shadow-md p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold text-gray-800">Detail Barang</h2>
      <a href="/aset" class="text-gray-500 hover:text-gray-700">
        <i class="fas fa-times text-xl"></i>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Nama Barang</div>
          <div class="w-2/3 text-gray-800"><%= asset.nama_barang %></div>
        </div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Kode Barang</div>
          <div class="w-2/3 text-gray-800"><%= asset.kode_barang %></div>
        </div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Kategori Barang</div>
          <div class="w-2/3 text-gray-800"><%= asset.kategori_barang %></div>
        </div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Tanggal Masuk</div>
          <div class="w-2/3 text-gray-800"><%= asset.tanggal_masuk %></div>
        </div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Kondisi Barang</div>
          <div class="w-2/3 text-gray-800"><%= asset.kondisi %></div>
        </div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Jumlah Barang</div>
          <div class="w-2/3 text-gray-800"><%= asset.kuantitas %></div>
        </div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Lokasi Penempatan</div>
          <div class="w-2/3 text-gray-800"><%= asset.lokasi %></div>
        </div>
        <div class="mb-4 flex items-center">
          <div class="w-1/3 text-gray-600 font-medium">Penanggung Jawab</div>
          <div class="w-2/3 text-gray-800"><%= asset.penanggung_jawab %></div>
        </div>
      </div>

      <div
        class="flex items-center justify-center p-4 border-2 border-dashed border-gray-300 rounded-lg bg-gray-50 h-full"
      >
        <img
          src="<%= asset.gambar_url || 'https://via.placeholder.com/250x150/4299e1/ffffff?text=No+Image' %>"
          alt="<%= asset.nama_barang || 'Gambar Barang' %>"
          class="max-w-full h-auto object-contain"
        />
      </div>
    </div>
  </div>
</div>

<%- include('./partials/closeAside.ejs') %>