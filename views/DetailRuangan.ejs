<%- include('./partials/layoutStart.ejs') %> 
<%- include('./partials/aside.ejs') %>

<div class="flex-1 p-6 bg-gray-100 min-h-screen">
  <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md p-8">
    
    <!-- Tombol Kembali -->
    <div class="flex justify-between items-start mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Detail Ruangan</h2>
      <a href="/ruangan" class="text-gray-500 hover:text-gray-700 text-2xl font-bold">
        &times;
      </a>
    </div>

    <!-- Gambar atau Placeholder -->
    <div class="mt-4 mb-6">
      <div class="w-full h-56 bg-gray-100 flex items-center justify-center text-gray-500 rounded-md overflow-hidden">
        <% if (ruangan.foto) { %>
          <img src="<%= ruangan.foto %>" alt="<%= ruangan.nama_ruangan %>" class="w-full h-full object-cover" />
        <% } else { %>
          <span class="text-lg font-medium"><%= ruangan.nama_ruangan %></span>
        <% } %>
      </div>
    </div>

    <!-- Informasi Ruangan -->
    <div class="text-center mb-4">
      <h1 class="text-xl font-semibold text-gray-800"><%= ruangan.nama_ruangan %></h1>
      <p class="text-sm text-gray-500 mt-1"><%= ruangan.kode_ruangan %></p>
    </div>

    <p class="text-center text-gray-600 leading-relaxed mb-8">
      <%= ruangan.deskripsi %>
    </p>

    <!-- Daftar Aset di Ruangan -->
    <div class="mt-6">
      <h3 class="text-sm font-medium text-gray-600 mb-2">Aset yang ada di ruangan ini</h3>
      
      <% if (asetDiRuangan && asetDiRuangan.length > 0) { %>
        <div class="space-y-1">
          <% asetDiRuangan.forEach((aset, index) => { %>
            <div class="flex items-center p-2 bg-gray-50 rounded border border-gray-200">
              <div class="flex-shrink-0 w-5 h-5 bg-gray-300 rounded-full flex items-center justify-center mr-2">
                <span class="text-xs font-medium text-gray-700"><%= index + 1 %></span>
              </div>
              
              <!-- Icon Aset -->
              <div class="flex-shrink-0 mr-2">
                <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
              
              <div class="flex-1 min-w-0">
                <div class="flex items-center justify-between mb-1">
                  <h4 class="font-medium text-gray-800 text-xs truncate"><%= aset.nama_barang %></h4>
                  <span class="text-xs px-1.5 py-0.5 rounded-full ml-2 <%= aset.kondisi === 'Baik' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= aset.kondisi %>
                  </span>
                </div>
                
                <div class="grid grid-cols-2 md:grid-cols-4 gap-1 text-xs text-gray-600">
                  <span class="truncate"><strong>Kode:</strong> <%= aset.kode_barang %></span>
                  <span><strong>Qty:</strong> <%= aset.kuantitas %></span>
                  <span class="truncate"><strong>Kat:</strong> <%= aset.kategori_barang %></span>
                  <span class="truncate"><strong>Tgl:</strong> <%= new Date(aset.tanggal_masuk).toLocaleDateString('id-ID') %></span>
                </div>
              </div>
              
              <% if (aset.gambar_barang) { %>
                <div class="flex-shrink-0 ml-2">
                  <img src="<%= aset.gambar_barang %>" alt="<%= aset.nama_barang %>" class="w-8 h-8 object-cover rounded" />
                </div>
              <% } %>
            </div>
          <% }); %>
        </div>
        
        <div class="mt-2 text-xs text-gray-500">
          Total aset: <strong><%= asetDiRuangan.length %></strong> item
        </div>
      <% } else { %>
        <div class="text-center py-4">
          <div class="text-gray-300 mb-1">
            <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
          </div>
          <p class="text-xs text-gray-400">Belum ada aset yang berada di ruangan ini</p>
        </div>
      <% } %>
    </div>

  </div>
</div>

<%- include('./partials/closeAside.ejs') %>