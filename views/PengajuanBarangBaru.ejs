<%- include('./partials/layoutStart.ejs') %> 
<%- include('./partials/aside.ejs') %>

<div class="flex-1 bg-gray-100 p-6">
  <div class="container mx-auto p-1">
    <div class="bg-white rounded-lg shadow-md p-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-8">Pengajuan Barang Baru</h2>

      <!-- ✅ BUNGKUS DENGAN FORM -->
      <form action="/aset/ajukan" method="POST">

        <!-- Bagian Data Pengaju -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div>
            <label for="namaPengaju" class="block text-sm font-medium text-gray-700 mb-1">Nama Pengaju</label>
            <input type="text" name="namaPengaju" id="namaPengaju" placeholder="Nama Lengkap Pengaju"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
          </div>
          <div>
            <label for="jabatanPengaju" class="block text-sm font-medium text-gray-700 mb-1">Jabatan Pengaju</label>
            <input type="text" name="jabatanPengaju" id="jabatanPengaju" placeholder="Jabatan Pengaju"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
          </div>
        </div>

        <hr class="border-t border-gray-700 h-px mb-8"/>

        <!-- Bagian Data Barang yang Diajukan -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div>
            <label for="namaBarang" class="block text-sm font-medium text-gray-700 mb-1">Nama Barang</label>
            <input type="text" name="namaBarang" id="namaBarang" placeholder="Nama alat yang diajukan"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
          </div>
          <div>
            <label for="jumlahBarang" class="block text-sm font-medium text-gray-700 mb-1">Jumlah</label>
            <input type="number" name="jumlahBarang" id="jumlahBarang" placeholder="Jumlah unit"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
          </div>
          <div>
            <label for="ruanganTujuan" class="block text-sm font-medium text-gray-700 mb-1">Ruangan Tujuan</label>
            <select name="ruanganTujuan" id="ruanganTujuan"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md text-gray-500 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
              <option selected disabled value="">Pilih Ruangan</option>
              <option>Lab Komputer</option>
              <option>Ruang Asisten</option>
              <option>Ruang Utama</option>
            </select>
          </div>
        </div>

        <div class="mb-6">
          <label for="spesifikasi" class="block text-sm font-medium text-gray-700 mb-1">Spesifikasi / Detail</label>
          <textarea name="spesifikasi" id="spesifikasi" rows="3"
                    placeholder="Detail spesifikasi, merek, atau model yang diinginkan"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
        </div>

        <div class="mb-8">
          <label for="alasan" class="block text-sm font-medium text-gray-700 mb-1">Alasan Pengajuan</label>
          <textarea name="alasan" id="alasan" rows="3" placeholder="Jelaskan mengapa alat ini diperlukan"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
        </div>

        <!-- Tombol -->
        <div class="flex justify-end mt-8 space-x-4">
         <a href="/aset" class="px-6 py-2 border border-red-500 rounded-md text-red-500 font-medium hover:bg-red-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 mr-3">
          Batal
        </a>
        <button type="submit" class="px-6 py-2 bg-[#0D1F4B] text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Simpan
        </button>
        </div>
      </form>
      <!-- ✅ AKHIR FORM -->
    </div>
  </div>
</div>

<%- include('./partials/closeAside.ejs') %>