<%- include('./partials/layoutStart.ejs') %>
<%- include('./partials/aside.ejs') %>

<div class="flex-1 bg-gray-100 p-6">
    <div class="mb-6 bg-white rounded-md shadow-md p-6">
        <div class="flex justify-between items-center mb-6 pb-4">
            <h2 class="text-2xl font-semibold text-gray-800">Ubah Data Peminjaman</h2>
            <a href="/peminjaman" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times text-xl"></i>
            </a>
        </div>

        <form action="/peminjaman/update/<%= peminjaman.id %>" method="POST">
            <div class="space-y-4">
                <div>
                    <label for="namaPeminjam" class="block text-sm font-medium text-gray-700 mb-1">Nama Peminjam</label>
                    <input type="text" id="namaPeminjam" name="nama_peminjam" placeholder="Masukkan nama peminjam" value="<%= peminjaman.nama_peminjam %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="namaBarang" class="block text-sm font-medium text-gray-700 mb-1">Nama Barang</label>
                    <input type="text" id="namaBarang" name="nama_barang" placeholder="Masukkan nama barang" value="<%= peminjaman.nama_barang %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="noHp" class="block text-sm font-medium text-gray-700 mb-1">Nomor HP</label>
                    <input type="text" id="noHp" name="no_hp" placeholder="Masukkan nomor HP" value="<%= peminjaman.no_hp %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input type="email" id="email" name="email" placeholder="Masukkan email" value="<%= peminjaman.email %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
                <div>
                    <label for="jumlahBarang" class="block text-sm font-medium text-gray-700 mb-1">Jumlah</label>
                    <input type="number" id="jumlahBarang" name="jumlah_barang" placeholder="Masukkan jumlah barang" value="<%= peminjaman.jumlah_barang %>" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
            </div>

            <div class="flex justify-end mt-8 pt-4 border-t border-gray-200">
                <a href="/peminjaman" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 font-medium hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 mr-3">Batal</a>
                <button type="submit" class="px-6 py-2 bg-[#0D1F4B] text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Simpan Perubahan</button>
            </div>
        </form>
    </div>
</div>

<%- include('./partials/closeAside.ejs') %> 